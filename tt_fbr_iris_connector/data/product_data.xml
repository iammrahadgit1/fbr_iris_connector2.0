<odoo>
    <data noupdate="1">

        <record id="product_pos_service_fee" model="product.template">
            <field name="name">POS Service Fee</field>
            <field name="type">service</field>
            <field name="default_code">SERVICE_FEE</field>
            <field name="available_in_pos" eval="True"/>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="list_price">1</field>
            <field name="standard_price">0.0</field>
            <field name="taxes_id" eval="[]"/>
            <field name="supplier_taxes_id" eval="[]"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>     
            <field name="uom_po_id" ref="uom.product_uom_unit"/>   
        </record>

    </data>
</odoo>
